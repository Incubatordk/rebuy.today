---
const testimonials = [
  {
    quote: 'Endelig en app der kun handler om børneting! Jeg fandt en fantastisk barnevogn i perfekt stand, kun 10 minutter fra vores hjem.',
    name: 'Mette L.',
    detail: 'Mor til 2, København',
    initial: 'M',
    color: '#E8D5E0',
  },
  {
    quote: 'Så nemt at sælge alt det tøj, mine børn er vokset fra. Jeg elsker at det går til andre familier i nærområdet.',
    name: 'Sofie K.',
    detail: 'Mor til 1, Aarhus',
    initial: 'S',
    color: '#D5E0E8',
  },
  {
    quote: 'Vi sparer tusindvis af kroner hvert år. Børn vokser så hurtigt — det giver ingen mening at købe alt nyt.',
    name: 'Louise T.',
    detail: 'Mor til 3, Odense',
    initial: 'L',
    color: '#E0E8D5',
  },
];
---
<section class="testimonials" id="udtalelser">
  <div class="container">
    <div class="section-header" data-animate>
      <span class="section-label">Udtalelser</span>
      <h2 class="section-title">Det siger andre forældre</h2>
    </div>
    <div class="testimonials-grid" data-animate-stagger>
      {testimonials.map((t) => (
        <div class="testimonial-card">
          <span class="testimonial-stars" role="img" aria-label="5 stjerner">
            {[...Array(5)].map(() => (
              <svg width="16" height="16" viewBox="0 0 24 24" fill="#F5A623"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
            ))}
          </span>
          <blockquote class="testimonial-quote">"{t.quote}"</blockquote>
          <div class="testimonial-author">
            <div class="testimonial-avatar" style={`background: ${t.color};`}>{t.initial}</div>
            <div>
              <div class="testimonial-name">{t.name}</div>
              <div class="testimonial-detail">{t.detail}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials {
    padding: var(--space-24) 0;
    background: var(--color-bg-warm);
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }

  .testimonial-card {
    background: var(--color-bg-card);
    padding: var(--space-8);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow);
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .testimonial-stars {
    display: flex;
    gap: 2px;
  }

  .testimonial-quote {
    font-size: var(--font-size-md);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-primary);
    font-style: italic;
    flex: 1;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  .testimonial-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-secondary);
    flex-shrink: 0;
  }

  .testimonial-name {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
  }

  .testimonial-detail {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  @media (max-width: 900px) {
    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
      max-width: 480px;
      margin: 0 auto;
    }
  }
</style>
