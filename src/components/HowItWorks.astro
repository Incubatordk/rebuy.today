---
import { Image } from 'astro:assets';
import step1Img from '../assets/images/step1.jpg';
import step2Img from '../assets/images/step2.jpg';
import step3Img from '../assets/images/step3.jpg';

const steps = [
  {
    number: '01',
    title: 'Find eller opret',
    description: 'Gennemse varer i dit nærområde — eller tag et par billeder og opret en annonce på under et minut.',
    image: step1Img,
    alt: 'Forælder fotograferer en barnevogn for at oprette en annonce',
  },
  {
    number: '02',
    title: 'Skriv og aftal',
    description: 'Send en besked direkte i appen. Aftal pris, mødested og tidspunkt nemt og sikkert.',
    image: step2Img,
    alt: 'Forælder skriver en besked i appen for at aftale handel',
  },
  {
    number: '03',
    title: 'Mød og byt',
    description: 'Mød hinanden lokalt og gør handlen. Ingen forsendelse, ingen gebyrer — bare en nem udveksling.',
    image: step3Img,
    alt: 'To forældre mødes og udveksler en børnecykel',
  },
];
---
<section class="how-it-works" id="saadan-virker-det">
  <div class="container">
    <div class="section-header" data-animate>
      <span class="section-label">Sådan virker det</span>
      <h2 class="section-title">Tre enkle trin<br /><span class="title-accent">— og du er i gang</span></h2>
    </div>
    <div class="steps" data-animate-stagger>
      {steps.map((step, i) => (
        <div class="step">
          <div class="step-top">
            <span class="step-number">{step.number}</span>
            {i < steps.length - 1 && <div class="step-line" aria-hidden="true" />}
          </div>
          <h3 class="step-title">{step.title}</h3>
          <p class="step-description">{step.description}</p>
          <div class="step-image-wrap">
            <Image class="step-image" src={step.image} alt={step.alt} width={400} height={400} loading="lazy" />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .how-it-works {
    padding: var(--space-24) 0;
    background: var(--color-bg-sage);
  }

  .steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-8);
  }

  .step {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .step-top {
    display: flex;
    align-items: center;
    margin-bottom: var(--space-6);
  }

  .step-number {
    flex-shrink: 0;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent);
    color: white;
    border-radius: var(--radius-xl);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    letter-spacing: -0.02em;
  }

  .step-line {
    flex: 1;
    height: 2px;
    background: linear-gradient(to right, var(--color-accent), var(--color-accent-light));
    margin-left: var(--space-4);
  }

  .step-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-3);
    color: var(--color-text-primary);
    letter-spacing: -0.01em;
  }

  .step-description {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 320px;
  }

  .step-image-wrap {
    margin-top: auto;
    padding-top: var(--space-6);
  }

  .step-image-wrap img {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
  }

  .step-image {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
    aspect-ratio: 1 / 1;
  }

  @media (max-width: 768px) {
    .steps {
      grid-template-columns: 1fr;
      gap: var(--space-10);
      max-width: 400px;
      margin: 0 auto;
    }

    .step-line {
      display: none;
    }
  }
</style>
